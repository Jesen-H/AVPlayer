<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/record_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/VI"
        android:gravity="center"
        android:text="@string/time"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/record_content"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/record"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:id="@+id/audio_record"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/audio_circle_white"
        android:gravity="center">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="33dp"
            android:src="@mipmap/new_info_audio_btn" />

    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/record_complete"
        android:visibility="gone"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/delete"
            android:layout_marginRight="50dp"
            android:src="@mipmap/new_info_audio_delete"
            android:layout_width="21dp"
            android:layout_height="33dp" />

        <ImageView
            android:id="@+id/submit"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/icon_new_info_validation"
            android:layout_width="21dp"
            android:layout_height="33dp" />
        
    </LinearLayout>

</LinearLayout>